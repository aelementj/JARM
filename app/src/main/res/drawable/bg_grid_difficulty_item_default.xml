<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/grid_item_default_bg" />
        </shape>
    </item>
    <!-- Border (all sides) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="@dimen/grid_item_border_width"
                android:color="@color/panel_border_color" />
        </shape>
    </item>
</layer-list>