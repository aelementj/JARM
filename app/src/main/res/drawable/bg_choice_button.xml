<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#B0BEC5"/> <!-- Light gray when pressed -->
            <corners android:radius="8dp"/> <!-- Optional: add corners -->
            <stroke android:width="1dp" android:color="#78909C"/> <!-- Optional: add a border -->
        </shape>
    </item>

    <!-- Selected state (optional, if you use it programmatically or for focus) -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#81D4FA"/> <!-- A distinct color for selected -->
            <corners android:radius="8dp"/>
            <stroke android:width="1dp" android:color="#4FC3F7"/>
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0"/> <!-- Default gray -->
            <corners android:radius="8dp"/>
            <stroke android:width="1dp" android:color="#BDBDBD"/>
        </shape>
    </item>

</selector>