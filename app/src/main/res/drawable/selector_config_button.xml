<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/purple_200"/> <!-- Selected color -->
            <corners android:radius="8dp"/>
            <stroke android:width="1dp" android:color="@color/purple_500"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Default transparent or light gray -->
            <corners android:radius="8dp"/>
            <stroke android:width="1dp" android:color="@color/text_secondary_dark_faint"/>
        </shape>
    </item>
</selector>