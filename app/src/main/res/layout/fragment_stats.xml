<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context=".StatsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_medium">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_stats_tic_tac_toe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            android:layout_marginBottom="@dimen/spacing_large">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_large">

                <TextView
                    android:id="@+id/text_stats_ttt_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stats_title_tic_tac_toe"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary_dark"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/text_stats_ttt_player_x_winrate_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stats_ttt_player_x_winrate_label"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary_dark"
                    android:layout_marginTop="@dimen/spacing_medium"
                    app:layout_constraintTop_toBottomOf="@id/text_stats_ttt_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/guideline_ttt_winrate_vertical_center"
                    app:layout_constraintHorizontal_bias="0.5"/>

                <TextView
                    android:id="@+id/text_stats_ttt_player_x_winrate_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="60.0%"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_500"
                    app:layout_constraintTop_toBottomOf="@id/text_stats_ttt_player_x_winrate_label"
                    app:layout_constraintStart_toStartOf="@id/text_stats_ttt_player_x_winrate_label"
                    app:layout_constraintEnd_toEndOf="@id/text_stats_ttt_player_x_winrate_label"/>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_ttt_winrate_vertical_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5"/>

                <TextView
                    android:id="@+id/text_stats_ttt_player_o_winrate_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stats_ttt_player_o_winrate_label"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary_dark"
                    android:layout_marginTop="@dimen/spacing_medium"
                    app:layout_constraintTop_toBottomOf="@id/text_stats_ttt_title"
                    app:layout_constraintStart_toEndOf="@+id/guideline_ttt_winrate_vertical_center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"/>

                <TextView
                    android:id="@+id/text_stats_ttt_player_o_winrate_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="40.0%"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_500"
                    app:layout_constraintTop_toBottomOf="@id/text_stats_ttt_player_o_winrate_label"
                    app:layout_constraintStart_toStartOf="@id/text_stats_ttt_player_o_winrate_label"
                    app:layout_constraintEnd_toEndOf="@id/text_stats_ttt_player_o_winrate_label"/>


                <LinearLayout
                    android:id="@+id/layout_ttt_overall_stats"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/spacing_medium"
                    app:layout_constraintTop_toBottomOf="@id/text_stats_ttt_player_x_winrate_value"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/guideline_ttt_vertical_center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="@dimen/spacing_small">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stats_ttt_player_x_wins_label"
                        android:textColor="@color/text_primary_dark"/>
                    <TextView
                        android:id="@+id/text_stats_ttt_player_x_wins_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="10"
                        android:textSize="16sp"
                        android:textColor="@color/text_secondary_dark"
                        android:layout_marginBottom="@dimen/spacing_small"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stats_ttt_player_o_wins_label"
                        android:textColor="@color/text_primary_dark"/>
                    <TextView
                        android:id="@+id/text_stats_ttt_player_o_wins_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="5"
                        android:textSize="16sp"
                        android:textColor="@color/text_secondary_dark"
                        android:layout_marginBottom="@dimen/spacing_small"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stats_ttt_draws_label"
                        android:textColor="@color/text_primary_dark"/>
                    <TextView
                        android:id="@+id/text_stats_ttt_draws_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="3"
                        android:textSize="16sp"
                        android:textColor="@color/text_secondary_dark"/>
                </LinearLayout>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_ttt_vertical_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5"/>

                <LinearLayout
                    android:id="@+id/layout_ttt_bot_stats"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/spacing_medium"
                    app:layout_constraintTop_toBottomOf="@id/text_stats_ttt_player_o_winrate_value"
                    app:layout_constraintStart_toEndOf="@id/guideline_ttt_vertical_center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="@dimen/spacing_small">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stats_ttt_bot_wins_label"
                        android:textColor="@color/text_primary_dark"/>
                    <TextView
                        android:id="@+id/text_stats_ttt_bot_wins_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="8"
                        android:textSize="16sp"
                        android:textColor="@color/text_secondary_dark"
                        android:layout_marginBottom="@dimen/spacing_small"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stats_ttt_bot_losses_label"
                        android:textColor="@color/text_primary_dark"/>
                    <TextView
                        android:id="@+id/text_stats_ttt_bot_losses_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="2"
                        android:textSize="16sp"
                        android:textColor="@color/text_secondary_dark"
                        android:layout_marginBottom="@dimen/spacing_small"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stats_ttt_bot_draws_label"
                        android:textColor="@color/text_primary_dark"/>
                    <TextView
                        android:id="@+id/text_stats_ttt_bot_draws_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="1"
                        android:textSize="16sp"
                        android:textColor="@color/text_secondary_dark"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_stats_rps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            android:layout_marginBottom="@dimen/spacing_large">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_large">

                <TextView
                    android:id="@+id/text_stats_rps_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stats_title_rps"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary_dark"
                    android:layout_gravity="start"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stats_winrate_label"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary_dark"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/spacing_medium"/>

                <TextView
                    android:id="@+id/text_stats_rps_winrate_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="50.0%"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_500"
                    android:layout_gravity="center_horizontal"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/stats_rps_wins_label"
                            android:textColor="@color/text_primary_dark"/>
                        <TextView
                            android:id="@+id/text_stats_rps_wins_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="15"
                            android:textSize="18sp"
                            android:textColor="@color/text_secondary_dark"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/stats_rps_losses_label"
                            android:textColor="@color/text_primary_dark"/>
                        <TextView
                            android:id="@+id/text_stats_rps_losses_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="10"
                            android:textSize="18sp"
                            android:textColor="@color/text_secondary_dark"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/stats_rps_ties_label"
                            android:textColor="@color/text_primary_dark"/>
                        <TextView
                            android:id="@+id/text_stats_rps_ties_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="5"
                            android:textSize="18sp"
                            android:textColor="@color/text_secondary_dark"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stats_rps_hand_picks_label"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary_dark"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/spacing_large"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:gravity="center_vertical"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/image_stats_rps_rock_icon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            app:srcCompat="@drawable/img_rock_2"
                            android:contentDescription="@string/rps_choice_rock"/>
                        <TextView
                            android:id="@+id/text_stats_rps_rock_picks_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="12"
                            android:textColor="@color/text_primary_dark"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/image_stats_rps_paper_icon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            app:srcCompat="@drawable/img_paper_2"
                            android:contentDescription="@string/rps_choice_paper"/>
                        <TextView
                            android:id="@+id/text_stats_rps_paper_picks_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="10"
                            android:textColor="@color/text_primary_dark"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/image_stats_rps_scissors_icon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            app:srcCompat="@drawable/img_scissors_2"
                            android:contentDescription="@string/rps_choice_scissors"/>
                        <TextView
                            android:id="@+id/text_stats_rps_scissors_picks_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="8"
                            android:textColor="@color/text_primary_dark"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_stats_arithmetic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_large">

                <TextView
                    android:id="@+id/text_stats_arithmetic_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stats_title_arithmetic"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary_dark"
                    android:layout_gravity="start"/>

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/toggle_group_arithmetic_difficulty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    app:singleSelection="true"
                    app:checkedButton="@id/button_stats_arithmetic_easy"
                    android:gravity="center_horizontal">

                    <Button
                        android:id="@+id/button_stats_arithmetic_easy"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/difficulty_easy" />

                    <Button
                        android:id="@+id/button_stats_arithmetic_medium"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/difficulty_medium" />

                    <Button
                        android:id="@+id/button_stats_arithmetic_hard"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/difficulty_hard" />
                </com.google.android.material.button.MaterialButtonToggleGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stats_arithmetic_avg_points_label"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary_dark"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/spacing_medium"/>

                <TextView
                    android:id="@+id/text_stats_arithmetic_avg_points_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="1250"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_500"
                    android:layout_gravity="center_horizontal"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:paddingStart="@dimen/spacing_medium"
                    android:paddingEnd="@dimen/spacing_medium">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/spacing_small">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/stats_arithmetic_avg_speed_label"
                            android:textColor="@color/text_primary_dark"/>
                        <TextView
                            android:id="@+id/text_stats_arithmetic_avg_speed_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="5.2s"
                            android:textSize="16sp"
                            android:textColor="@color/text_secondary_dark"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/spacing_small">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/stats_arithmetic_fastest_answer_label"
                            android:textColor="@color/text_primary_dark"/>
                        <TextView
                            android:id="@+id/text_stats_arithmetic_fastest_answer_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="1.8s"
                            android:textSize="16sp"
                            android:textColor="@color/text_secondary_dark"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/stats_arithmetic_slowest_answer_label"
                            android:textColor="@color/text_primary_dark"/>
                        <TextView
                            android:id="@+id/text_stats_arithmetic_slowest_answer_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="12.5s"
                            android:textSize="16sp"
                            android:textColor="@color/text_secondary_dark"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>
