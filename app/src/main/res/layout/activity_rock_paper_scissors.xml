<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context=".RockPaperScissorsActivity">

    <!-- Toolbar, Scoreboard, Status, Choice Buttons, Player Choice Label ... (All Unchanged) -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayoutRPS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_rock_paper_scissors"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:menu="@menu/menu_rps"
            app:title="@string/game_title_rps_toolbar"
            app:titleTextColor="@color/text_primary_dark" />
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/rps_scoreboard_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@id/appBarLayoutRPS"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/text_view_score_player"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/bg_score_item_x"
            tools:text="Player: 0"
            android:text="@string/rps_score_player"
            android:textColor="@color/score_text_color"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"/>
        <TextView
            android:id="@+id/text_view_score_computer"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/bg_score_item_o"
            tools:text="Computer: 0"
            android:text="@string/rps_score_computer"
            android:textColor="@color/score_text_color"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView_rps_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rps_status_make_move"
        android:textSize="20sp"
        android:textColor="@color/text_primary_dark"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/rps_scoreboard_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/rps_choices_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/textView_rps_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageButton
            android:id="@+id/button_rock"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_choice_button"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="@string/content_desc_rps_choice_rock"
            android:src="@drawable/img_rock_2"/>
        <ImageButton
            android:id="@+id/button_paper"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/bg_choice_button"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/img_paper_2"
            android:contentDescription="@string/content_desc_rps_choice_paper"
            android:layout_marginEnd="16dp" />
        <ImageButton
            android:id="@+id/button_scissors"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/bg_choice_button"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/img_scissors_2"
            android:contentDescription="@string/content_desc_rps_choice_scissors"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView_player_choice_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Player: Rock"
        android:textColor="@color/text_primary_dark"
        android:textSize="18sp"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/rps_choices_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        tools:visibility="visible"/>

    <!-- MODIFIED: Verdict TextView to Button_play_again -->
    <Button
        android:id="@+id/button_play_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rps_button_play_again"
        android:textSize="18sp"
        android:textColor="@color/button_text_white"
        android:backgroundTint="@color/button_green_reset"
        app:cornerRadius="@dimen/card_corner_radius_compact"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/textView_player_choice_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        tools:visibility="visible"/>

    <!-- Computer's Choice Text (unchanged) -->
    <TextView
        android:id="@+id/textView_computer_choice_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Computer: Scissors"
        android:textColor="@color/text_primary_dark"
        android:textSize="18sp"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/button_play_again"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:visibility="gone"
    tools:visibility="visible"/>

    <!-- Computer's Choice Display Grid, Robot Image, Config Panel, Pause Overlay ... (All Unchanged) -->
    <LinearLayout
        android:id="@+id/computer_choice_display_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textView_computer_choice_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        tools:visibility="visible">
        <ImageView
            android:id="@+id/image_computer_slot_left"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_choice_button"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="@string/content_desc_rps_computer_choice_slot"/>
        <ImageView
            android:id="@+id/image_computer_slot_center"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/bg_choice_button"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="@string/content_desc_rps_computer_choice_slot"
            android:layout_marginEnd="16dp"/>
        <ImageView
            android:id="@+id/image_computer_slot_right"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/bg_choice_button"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="@string/content_desc_rps_computer_choice_slot"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/image_computer_choice"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/content_desc_rps_computer_image"
        android:scaleType="fitCenter"
        android:src="@drawable/img_robot"
        app:layout_constraintTop_toBottomOf="@id/computer_choice_display_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/config_panel_rps"
        app:layout_constraintVertical_bias="0.2" />

    <LinearLayout
        android:id="@+id/config_panel_rps"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:background="@drawable/bg_main_difficulty_panel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="visible">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rps_config_game_mode"
            android:textSize="16sp"
            android:textColor="@color/text_primary_dark"
            android:layout_marginBottom="4dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="12dp">
            <TextView
                android:id="@+id/text_config_best_of"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/rps_config_best_of"
                android:padding="10dp"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:textColor="@color/purple_500"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/text_config_first_to"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/rps_config_first_to"
                android:padding="10dp"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:textColor="@color/text_secondary_dark"/>
        </LinearLayout>
        <TextView
            android:id="@+id/text_config_rounds_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rps_config_rounds_label"
            android:textSize="16sp"
            android:textColor="@color/text_primary_dark"
            android:layout_marginBottom="4dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageButton
                android:id="@+id/button_config_decrease"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_arrow_down"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerInside"
                android:padding="8dp"
                android:contentDescription="@string/rps_decrease_rounds"/>
            <EditText
                android:id="@+id/edittext_config_rounds"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:text="3"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/text_primary_dark"
                android:background="@drawable/bg_choice_button"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:focusable="false"
                android:clickable="false"/>
            <ImageButton
                android:id="@+id/button_config_increase"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_arrow_up"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerInside"
                android:padding="8dp"
                android:contentDescription="@string/rps_increase_rounds"/>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/layout_pause_overlay"/>
    <include layout="@layout/layout_help_overlay"/>

</androidx.constraintlayout.widget.ConstraintLayout>