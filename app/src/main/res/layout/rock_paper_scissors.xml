<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context=".RockPaperScissorsActivity">

    <!-- Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayoutRPS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_rock_paper_scissors"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Rock Paper Scissors"
            app:titleTextColor="@color/text_primary_dark"
            app:menu="@menu/menu_rps"/>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scoreboard -->
    <LinearLayout
        android:id="@+id/rps_scoreboard_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@id/appBarLayoutRPS"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/text_view_score_player"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/bg_score_item_x"
            android:text="Player: 0"
            android:textColor="@color/score_text_color"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/text_view_score_computer"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/bg_score_item_o"
            android:text="Computer: 0"
            android:textColor="@color/score_text_color"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Status -->
    <TextView
        android:id="@+id/textView_rps_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make your move!"
        android:textSize="20sp"
        android:textColor="@color/text_primary_dark"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/rps_scoreboard_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Choice Buttons -->
    <LinearLayout
        android:id="@+id/rps_choices_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/textView_rps_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/button_rock"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_choice_button"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="Rock"
            android:src="@drawable/rock"/>

        <ImageButton
            android:id="@+id/button_paper"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/bg_choice_button"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/paper"
            android:contentDescription="Paper"
            android:layout_marginEnd="16dp"/>

        <ImageButton
            android:id="@+id/button_scissors"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/bg_choice_button"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/scissors"
            android:contentDescription="Scissors"/>
    </LinearLayout>

    <!-- Result Text -->
    <TextView
        android:id="@+id/textView_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player: Rock\nComputer: Scissors\nYou Win!"
        android:textColor="@color/text_primary_dark"
        android:textSize="18sp"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/rps_choices_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible"
        android:visibility="gone"/>

    <!-- Action Buttons -->
    <ImageView
        android:id="@+id/image_computer_choice"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:contentDescription="Computer's choice image"
        android:scaleType="fitCenter"
        android:src="@drawable/bot"
        app:layout_constraintTop_toBottomOf="@id/textView_result"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/action_buttons_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/button_reset_rps_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Game"
            android:textSize="14sp"
            android:textColor="@color/button_text_white"
            android:backgroundTint="@color/button_green_reset"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/button_reset_rps_scores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Scores"
            android:textSize="14sp"
            android:textColor="@color/button_text_white"
            android:backgroundTint="@color/button_red_reset_scoreboard"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
